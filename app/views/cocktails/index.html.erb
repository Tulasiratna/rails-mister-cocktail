<h1>List of Cocktails</h1>
<div class="container">
  <% @cocktails.each do |cocktail| %>
    <div class="card-product-info">
    <h2><%= cocktail.name.capitalize %></h2>
    <% cocktail.doses.each do |dose| %>
    <p><strong><%= dose.description %></strong></p>
    <%= dose.ingredient.name %>
    <% end %>
    </div>

  <%= link_to 'See details', cocktail_path(cocktail), class: 'btn btn-primary' %>
  <% end %>
</div>

